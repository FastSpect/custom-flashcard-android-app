<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".SettingsActivity">

    <TextView
        android:id="@+id/mode_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingTop="50dp"
        android:text="Mode"
        android:textColor="@color/text_color"
        android:textSize="18sp" />

    <SeekBar
        android:id="@+id/mode_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mode_label"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:thumbTint="@color/text_color"
        android:progressBackgroundTint="@color/text_color"
        android:max="2" />

    <TextView
        android:id="@+id/current_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mode_seekbar"
        android:layout_centerHorizontal="true"
        android:paddingTop="20dp"
        android:text="System Default"
        android:textColor="@color/text_color"
        android:textSize="16sp" />

</RelativeLayout>
